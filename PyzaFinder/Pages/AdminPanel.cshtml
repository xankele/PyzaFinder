@page
@model PyzaFinder.Pages.AdminPanelModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@section Styles {
    <link rel="stylesheet" href="~/css/AdminPanel.css" />
}
<br/>
<div style="margin-left: 60px; margin-right:60px">
    <div style="display:inline-block;">
        <h2 style="font-size:50px; text-align:center; padding-left:30px;">List of restaurants</h2>
    </div>

    <div class="button2">
        <a asp-page="Create">Add restaurant</a>
    </div>
    <br />
    <div id="table">
        <form method="post" style="overflow-y: auto; height: 450px;">
            @if (Model.DumplingRestaurants.Count() > 0)
            {
                <table>
                    <tr>
                        <th>
                            <label asp-for="DumplingRestaurants.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="DumplingRestaurants.FirstOrDefault().Address"></label>
                        </th>
                        <th>
                            <label></label>

                        </th>
                    </tr>
                    @foreach (var item in Model.DumplingRestaurants)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Address)
                            </td>
                            <td>
                                <a asp-page="AdminGallery" asp-route-id="@item.IdRestaurant" style="background-color: white; -webkit-box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.3); box-shadow: 0px 0px 9px 1px rgba(0,0,0,0.3); color: black; padding: 16px 16px; text-align: center; text-decoration: none; display: inline-block; font-size: 22px; cursor: pointer; border-radius: 23px; margin-left: 1px; margin-right: 15px; margin-bottom: 8px; margin-top: 8px; border: 1px solid white; width: 120px; height: 40px; padding-top: 1.4px; ">
                                    GALLERY
                                </a>
                                <a asp-page="Edit" asp-route-id="@item.IdRestaurant" style="background-color: white; -webkit-box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.3); box-shadow: 0px 0px 9px 1px rgba(0,0,0,0.3); color: black; padding: 16px 16px; text-align: center; text-decoration: none; display: inline-block; font-size: 22px; cursor: pointer; border-radius: 23px; margin-left: 1px; margin-right: 15px; margin-bottom: 8px; margin-top: 8px; border: 1px solid white; width: 120px; height: 40px; padding-top: 1.4px; ">
                                    EDIT
                                </a>
                                <button asp-page-handler="Delete" asp-route-id="@item.IdRestaurant" onclick="return confirm('Are you sure you want to delete this restaurant?')" class="btn btn-info btn-sm" style="        background-color: white;
        -webkit-box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.3);
        box-shadow: 0px 0px 9px 1px rgba(0,0,0,0.3);
        color: black;
        padding: 16px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 22px;
        cursor: pointer;
        border-radius: 23px;
        margin-left: 1px;
        margin-right: 15px;
        margin-bottom: 8px;
        margin-top: 8px;
        border: 1px solid white;
        width: 120px;
        height: 40px;
        padding-top: 1.4px;">
                                    DELETE
                                </button>


                            </td>
                        </tr>
                    }
                </table> }
            else
            {
                <p>There aren't any restaurants yet.</p>}
        </form>
    </div>
    <div id="pyza" style="height:150px;">
        <img src="~/img/pyzunia.png">
    </div>
</div>

