@page
@model PyzaFinder.Pages.GalleryModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@section Styles {
    <link rel="stylesheet" href="~/css/Gallery.css" />
}

<div style="display:inline-block;">
    <h2 style="font-size:50px; text-align:center; padding:30px; padding-left: 90px;"> @Model.DumplingRestaurant.Name </h2>
</div>
<div style="display:inline-block; float:right; padding: 30px; padding-right: 60px;">
    <a asp-page="AddPhoto" style="background-color: white; -webkit-box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.3); box-shadow: 0px 0px 9px 1px rgba(0,0,0,0.3); border: none; color: black; padding: 16px 16px; text-align: center; text-decoration: none; display: inline-block; font-size: 26px; cursor: pointer; border-radius: 23px; border: 1px solid white; width: 420px; height: 52px; padding-top: 6px; margin-top: 5px;">Add new photo</a>
</div>

<div id="gallery" style="background-color: white; height: 500px; margin-left: 60px; margin-right: 60px;">

    <h2> tu beda zdjatka</h2>
    <div class="card-deck">
        @foreach (var photo in Model.Photos)
        {
            <img class="card-img-top imageThumbnail" src="#" asp-append-version="true" />
            <button asp-page-handler="Delete" asp-route-id="@photo.IdPhoto" onclick="return confirm('Are you sure you want to delete?')">Delete</button>
        }
    </div>
</div>
<div id="pyza" style="height:150px;">
    <div style="padding: 60px;">
        <a asp-page="Index" style="background-color: white; -webkit-box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.3); box-shadow: 0px 0px 9px 1px rgba(0,0,0,0.3); border: none; color: black; padding: 16px 16px; text-align: center; text-decoration: none; display: inline-block; font-size: 26px; cursor: pointer; border-radius: 23px; border: 1px solid white; width: 420px; height: 52px; padding-top: 6px; margin-top: 5px;">Back to admin panel</a>
    </div>
    <img src="~/img/pyzunia.png">
</div>